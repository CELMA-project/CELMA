#define zDx_lsO2(f,y,x,fxO2)	(2.*fxO2*(-f[(y)][(x)]+f[(y)][(x)+1]))

#define zDxO4(f,y,x,fxO4)	(fxO4*(f[(y)][(x)-2]-8.0*\
				(f[(y)][(x)-1]-f[(y)][(x)+1])-f[(y)][(x)+2]))

#define zDyO2(f,y,x,fyO2)	(fyO2*(f[(y)+1][(x)]-f[(y)-1][(x)]))
#define zDy_bsO2(f,y,x,fyO2)	(fyO2*(-3.*f[(y)][(x)]+4.*f[(y)+1][(x)]- f[(y)+2][(x)]))
#define zDy_tsO2(f,y,x,fyO2)	(fyO2*( 3.*f[(y)][(x)]-4.*f[(y)-1][(x)]+ f[(y)-2][(x)]))

#define zDyO4(f,y,x,fyO4)	(fyO4*(f[(y)-2][(x)]-8.0*\
