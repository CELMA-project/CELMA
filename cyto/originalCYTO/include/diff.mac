#define zLapl_bsO2(f,y,x,fyyO2,fxxO2) (zDyy_bsO2(f,y,x,fyyO2) + zDxxO2(f,y,x,fxxO2))
#define zLapl_tsO2(f,y,x,fyyO2,fxxO2) (zDyy_tsO2(f,y,x,fyyO2) + zDxxO2(f,y,x,fxxO2))

#define zLapl_lbO2(f,y,x,fyyO2,fxxO2) (zDxx_lsO2(f,y,x,fxxO2) + zDyy_bsO2(f,y,x,fyyO2))
