#define zDxxO2(f,y,x,fxxO2)	(fxxO2*(f[(y)][(x)+1]-2.*f[(y)][(x)]+f[(y)][(x)-1]))
#define zDxxO4(f,y,x,fxxO4)	(fxxO4*(-f[(y)][(x)+2]-f[(y)][(x)-2]\
				+16.*(f[(y)][(x)+1]+f[(y)][(x)-1])\
				-30.*f[(y)][(x)]))

#define zDyyO2(f,y,x,fyyO2)	(fyyO2*(f[(y)+1][(x)]-2.*f[(y)][(x)]+f[(y)-1][(x)]))
#define zDyyO4(f,y,x,fyyO4)	(fyyO4*(-f[(y)+2][(x)]-f[(y)-2][(x)]\
				+16.*(f[(y)+1][(x)]+f[(y)-1][(x)])\
				-30.*f[(y)][(x)]))

#define zDxx_lsO2(f,y,x,fxxO2) (fxxO2)*(2.*f[(y)][(x)]-5.*f[(y)][(x)+1] +4.*f[(y)][(x)+2] - f[(y)][(x)+3])
#define zDxx_rsO2(f,y,x,fxxO2) (fxxO2)*(-2.*f[(y)][(x)]+5.*f[(y)][(x)-1] -4.*f[(y)][(x)-2] + f[(y)][(x)-3])

#define zDyy_bsO2(f,y,x,fyyO2) fyyO2*(2.*f[(y)][(x)]-5.*f[(y)+1][(x)] +4.*f[(y)+2][(x)] - f[(y)+3][(x)])
#define zDyy_tsO2(f,y,x,fyyO2) fyyO2*(-2.*f[(y)][(x)]+5.*f[(y)-1][(x)] -4.*f[(y)-2][(x)] + f[(y)-3][(x)])


#define zDyxO2(f,y,x,fyO2,fxO2) (fyO2*fxO2*(f[(y)+1][(x)+1]-f[(y)+1][(x)-1]\
					    -f[(y)-1][(x)+1]+f[(y)-1][(x)-1]))


#define zDyxO4(f,y,x,fyO4,fxO4) (fyO4*fxO4)


#define zLaplO2(f,y,x,fyyO2,fxxO2) (zDxxO2(f,y,x,fxxO2)+zDyyO2(f,y,x,fyyO2))
